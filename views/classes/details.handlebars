<head>
    <link rel="stylesheet" href="/public/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <script src="/public/javascripts/jquery.js"></script>
    <script src="/public/javascripts/bootstrap.min.js"></script>
</head>
<h1>{{class.title}}</h1>
    <div style="margin-bottom:8%;"></div>
         <div class="panel panel-default">
                    <div class="panel-heading panel-heading-green">
                    <h3 class="panel-title">
                    <center>More About This Course</center>
                    </h3>
                    </div>
                    <div class="panel-body">
                        <p>{{class.description}}</p><br>
                        <h4><b>Instructor:</b> {{class.instructor}}</h4><br>
                    </div>
                </div>
    {{#if user}}
    <form id="classregform" method="post" action="/{{usertype}}s/classes/register">
        <input type="hidden" name="student_username" value="{{user.username}}">
        <input type="hidden" name="class_id" value="{{class._id}}">
        <input type="hidden" name="class_title" value="{{class.title}}">
        <button type="submit" class="btn btn-lg btn-success">Register Now</button>
    </form>
    {{else}}
    <p><em><u>You must be logged in to register for this class</u></em></p>
    {{/if}}