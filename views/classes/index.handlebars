      <h1 style="margin-bottom:6%;"><center>ALL CLASSES</center></h1>
          
           {{#each classes}}
            <div class="col-lg-5 col-md-5 col-sm-6 hero-feature">
                <div class="panel panel-default">
                    <div class="panel-heading panel-heading-green">
                    <h3 class="panel-title">
                    <center>{{title}}</center>
                    </h3>
                    </div>
                    <div class="panel-body">
                        <p>{{description}}</p><br>
                        <h4>Instructor: {{instructor}}</h4><br>
                        <p>
                              <center><a href="/classes/{{_id}}/details" class="btn btn-primary">More Info</a></center>
                        </p>
                    </div>
                    </div>
                </div>
            {{/each}}   